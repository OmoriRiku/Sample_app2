<h2>投稿一覧</h2>

<% @lists.each do |list| %>
  <p>タイトル</p>
  <small><%= link_to list.title, list_path(list) %></small>
  
  <p>画像</p>
  <% if list.image.attached? %>
    <%= image_tag list.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
  
  <p><%= link_to "削除する", destroy_list_path(list), method: :delete %></p>
<% end %>
